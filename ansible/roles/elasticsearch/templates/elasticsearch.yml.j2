# ======================== Elasticsearch Configuration =========================
#
# NOTE: Elasticsearch comes with reasonable defaults for most settings.
#       Before you set out to tweak and tune the configuration, make sure you
#       understand what are you trying to accomplish and the consequences.
#
# The primary way of configuring a node is via this file. This template lists
# the most important settings you may want to configure for a production cluster.
#
# Please consult the documentation for further information on configuration options:
# https://www.elastic.co/guide/en/elasticsearch/reference/index.html
# https://www.elastic.co/docs/deploy-manage/deploy/self-managed/important-settings-configuration
#
# ---------------------------------- Cluster -----------------------------------
#
# Use a descriptive name for your cluster:
#
cluster.name: {{ elasticsearch_cluster_name | default('docker_cluster') }}
#
# ------------------------------------ Node ------------------------------------
#
# Use a descriptive name for the node: node_name can be set by env var in elasticsearch image
#
#node.name: es-node1
node.name: ${NODE_NAME}
#
# Add custom attributes to the node:
#
#node.attr.rack: r1
#
# ----------------------------------- Paths ------------------------------------
#
# Path to directory where to store the data (separate multiple locations by comma):
#
#@path.data@
path.data: {{ elasticsearch_container_data_directory }}
#
# Path to log files:
#
#@path.logs@
path.logs: {{ elasticsearch_container_log_directory }}
#
# ----------------------------------- Memory -----------------------------------
#
# Lock the memory on startup:
#
#bootstrap.memory_lock: true
#
# Make sure that the heap size is set to about half the memory available
# on the system and that the owner of the process is allowed to use this
# limit.
#
# Elasticsearch performs poorly when the system is swapping the memory.
#
# ---------------------------------- Network -----------------------------------
#
# By default Elasticsearch is only accessible on localhost. Set a different
# address here to expose this node on the network:
#
network.host: {{ elasticsearch_host | default('0.0.0.0') }}
#
# By default, Elasticsearch listens for HTTP traffic on the first free port it
# finds starting at 9200. Set a specific HTTP port here:
#
http.port: {{ elasticsearch_port | default('9200') }}
#
# For more information, consult the network module documentation.
# https://www.elastic.co/docs/reference/elasticsearch/configuration-reference/networking-settings
#
# --------------------------------- Discovery ----------------------------------
#
# Pass an initial list of hosts to perform discovery when this node is started:
# The default list of hosts is ["127.0.0.1", "[::1]"]
#
#discovery.seed_hosts: [ 192.168.1.66 ]
discovery.seed_hosts: ${DISCOVERY_SEED_HOSTS}
#
# Bootstrap the cluster using an initial set of master-eligible nodes:
#
#cluster.initial_master_nodes: [ "es-node1", "es-node2" ]
cluster.initial_master_nodes: ${INITIAL_MASTER_NODES}
#
# For more information, consult the discovery and cluster formation module documentation.
#
# ---------------------------------- Various -----------------------------------
#
# Allow wildcard deletion of indices:
#
#action.destructive_requires_name: false

## X-Pack settings
## see https://www.elastic.co/guide/en/elasticsearch/reference/current/security-settings.html
#
xpack.license.self_generated.type: {{ elasticsearch_license_type | default('basic') }}
xpack.security.enabled: {{ elasticsearch_security_enabled }}

##
## TLS configuration
## See instructions from README to enable.
##

## Communications between nodes in a cluster
## see https://www.elastic.co/guide/en/elasticsearch/reference/current/configuring-tls.html#tls-transport
#
{% if elasticsearch_security_enabled | bool and elasticsearch_transport_ssl_enabled | bool %}
xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.verification_mode: certificate
xpack.security.transport.ssl.certificate_authorities: [ {{ elasticsearch_container_ca_certificates_directory }}/ca.crt ]
xpack.security.transport.ssl.certificate: {{ elasticsearch_container_ca_certificates_directory }}/elasticsearch.crt
xpack.security.transport.ssl.key: {{ elasticsearch_container_ca_certificates_directory }}/elasticsearch.key
{% endif %}

## HTTP client communications
## see https://www.elastic.co/guide/en/elasticsearch/reference/current/configuring-tls.html#tls-http
#
{% if elasticsearch_security_enabled | bool and elasticsearch_https_enabled | bool %}
xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.verification_mode: certificate
xpack.security.http.ssl.certificate_authorities: [ {{ elasticsearch_container_ca_certificates_directory }}/ca.crt ]
xpack.security.http.ssl.certificate: {{ elasticsearch_container_ca_certificates_directory }}/elasticsearch.crt
xpack.security.http.ssl.key: {{ elasticsearch_container_ca_certificates_directory }}/elasticsearch.key
{% endif %}

## Monitoring settings
## see https://www.elastic.co/guide/en/elasticsearch/reference/current/monitoring-settings.html
#
xpack.monitoring.collection.enabled: {{ elasticsearch_monitoring_enabled }}

## Buffer
indices.memory.index_buffer_size: {{ elasticsearch_index_buffer_size_percentage }}%
